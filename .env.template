# MCP Server Configuration
# Copy this to .env and fill in your values

# API Key for Copilot Studio authentication (generate a secure random key)
# Example: openssl rand -hex 16
MCP_API_KEY=your-secure-api-key

# Dataverse Configuration
# Create an App Registration in Entra ID with Dataverse permissions
DATAVERSE_URL=https://yourorg.crm.dynamics.com
DATAVERSE_CLIENT_ID=your-app-registration-client-id
DATAVERSE_CLIENT_SECRET=your-app-registration-client-secret
DATAVERSE_TENANT_ID=your-azure-tenant-id

# Azure Document Intelligence (for OCR)
# Create a Document Intelligence resource in Azure Portal
DOC_INTELLIGENCE_ENDPOINT=https://your-docint.cognitiveservices.azure.com/
DOC_INTELLIGENCE_KEY=your-document-intelligence-key

# Perplexity AI (optional - for adverse media screening)
# Get key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# Server port (default 8080)
PORT=8080
